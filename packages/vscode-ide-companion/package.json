{
  "name": "rdmind-vscode-ide-companion",
  "displayName": "RDMind Companion",
  "description": "Enable RDMind with direct access to your VS Code workspace.",
  "version": "0.2.1-alpha.0",
  "publisher": "RDMind",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "license": "LICENSE",
  "preview": true,
  "categories": [
    "AI"
  ],
  "keywords": [
    "rdmind",
    "ide integration",
    "ide companion"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rdmind-diff-editable"
      }
    ],
    "commands": [
      {
        "command": "rdmind.diff.accept",
        "title": "RDMind: Accept Current Diff",
        "icon": "$(check)"
      },
      {
        "command": "rdmind.diff.cancel",
        "title": "RDMind: Close Diff Editor",
        "icon": "$(close)"
      },
      {
        "command": "rdmind-code.runRdmind",
        "title": "RDMind: Run"
      },
      {
        "command": "rdmind-code.showNotices",
        "title": "RDMind: View Third-Party Notices"
      },
      {
        "command": "rdmind-code.openChat",
        "title": "RDMind: Open",
        "icon": "./assets/icon.png"
      },
      {
        "command": "rdmind-code.login",
        "title": "RDMind: Login"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "rdmind.diff.accept",
          "when": "rdmind.diff.isVisible"
        },
        {
          "command": "rdmind.diff.cancel",
          "when": "rdmind.diff.isVisible"
        },
        {
          "command": "rdmind-code.login",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "command": "rdmind.diff.accept",
          "when": "rdmind.diff.isVisible",
          "group": "navigation"
        },
        {
          "command": "rdmind.diff.cancel",
          "when": "rdmind.diff.isVisible",
          "group": "navigation"
        },
        {
          "command": "rdmind-code.openChat",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "rdmind.diff.accept",
        "key": "ctrl+s",
        "when": "rdmind.diff.isVisible"
      },
      {
        "command": "rdmind.diff.accept",
        "key": "cmd+s",
        "when": "rdmind.diff.isVisible"
      }
    ]
  },
  "main": "./dist/extension.cjs",
  "type": "module",
  "scripts": {
    "prepackage": "node ./scripts/prepackage.js",
    "build": "npm run build:dev",
    "build:dev": "npm run check-types && npm run lint && node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "generate:notices": "node ./scripts/generate-notices.js",
    "prepare": "npm run generate:notices",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "watch": "npm-run-all2 -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "validate:notices": "node ./scripts/validate-notices.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "20.x",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/vsce": "^3.6.0",
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "npm-run-all2": "^8.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "semver": "^7.7.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "markdown-it": "^14.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.76"
  }
}
